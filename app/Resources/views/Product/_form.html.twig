{{ form_start(form, { 'attr': {
    'class': 'form-horizontal'
}}) }}
                {{ form_errors(form) }}
<div class="form-group">
    {{ form_label(form.name, 'Nom' ,{ 'label_attr': {
        'class': 'col-sm-2 control-label'
    } }) }}
    <div class="col-sm-10">
        {{ form_widget(form.name, { 'attr': {
            'class': 'form-control',
            'autofocus': true
        }}) }}
    </div>
</div>
<div class="form-group">
    {{ form_label(form.reference, 'Référence' ,{ 'label_attr': {
        'class': 'col-sm-2 control-label'
    } }) }}
    <div class="col-sm-10">
        {{ form_widget(form.reference, { 'attr': {
            'class': 'form-control'
        }}) }}
    </div>
</div>
<div class="form-group">
    {{ form_label(form.price, 'Prix' ,{ 'label_attr': {
        'class': 'col-sm-2 control-label'
    } }) }}
    <div class="col-sm-10">
        {{ form_widget(form.price, { 'attr': {
            'class': 'form-control'
        }}) }}
    </div>
</div>
{{ form_rest(form) }}
<div class="box-footer">
    <button type="submit" class="btn btn-info pull-right">{% if type == 'add' %}Ajouter{% else %}Enregistrer{% endif %}</button>
</div>
{{ form_end(form) }}
